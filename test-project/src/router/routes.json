{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public page accessible to everyone",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/discover": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Public discovery page",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/create": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Must be authenticated to create posts",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/authenticateduser/login"
    }
  },
  "/messages": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Must be authenticated to view messages",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/authenticateduser/login"
    }
  },
  "/profile": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Must be authenticated to view profile",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/authenticateduser/login"
    }
  },
  "/authenticateduser/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/authenticateduser/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/access-denied": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Access denied page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}